# IMAP Settings (incoming email monitoring)
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USERNAME=monitor@example.com
IMAP_PASSWORD=your_imap_password_here

# SMTP Settings (outgoing email sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USERNAME=sender@example.com
SMTP_PASSWORD=your_smtp_password_here

# Whitelist Configuration (regex pattern for allowed senders)
# Examples:
#   - .*@company\.com (all addresses from company.com)
#   - (alice|bob)@example\.com (specific users only)
#   - .* (allow all - NOT RECOMMENDED for security)
SENDER_WHITELIST_REGEX=.*@yourcompany\.com

# Optional: CC Recipients (semicolon-separated list)
# Example: supervisor@company.com;team@company.com
CC_ADDRESSES=

# Optional: Polling Interval (seconds, default: 60)
POLLING_INTERVAL_SECONDS=60

# Optional: Max Retry Interval for IMAP connection failures (seconds, default: 900 = 15 min)
MAX_RETRY_INTERVAL_SECONDS=900

# Optional: PDF Conversion Settings
# Resolution of generated PNG images (pixels)
PDF_RESOLUTION_WIDTH=1920
PDF_RESOLUTION_HEIGHT=1080

# DPI for PDF rendering (higher = better quality, slower conversion)
PDF_DENSITY_DPI=300

# Background color for transparent PDFs
PDF_BACKGROUND=white

# Timeout for a single PDF conversion (seconds)
PDF_CONVERSION_TIMEOUT_SECONDS=120
